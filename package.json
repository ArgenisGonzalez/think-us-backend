{
  "name": "think-us-backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node server.js",
    "start:watch": "nodemon server.js",
    "migrate": "node src/database/migrations/index.js",
    "seed": "node src/database/seed/index.js",
    "test": "jest --coverage",
    "docker:local": "docker-compose -f docker-compose.yml up --build",
    "docker:down": "docker-compose -f docker-compose.yml down -v",
    "docker:rebuild": "docker-compose -f docker-compose.yml down -v && docker-compose -f docker-compose.yml up --build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.3",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7"
  },
  "devDependencies": {
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "sqlite3": "^5.1.7",
    "supertest": "^7.1.4"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "setupFiles": [
      "<rootDir>/src/config/test-setup.js"
    ]
  }
}
